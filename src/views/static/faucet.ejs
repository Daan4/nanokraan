<!-- Main -->
<div id="faucet">
    <div class="jumbotron mainScreen">
        <Br><br>
        <center>
            <h1 class="title notranslate">Nano <span class="drop-icon glyphicon glyphicon-tint"></span> Drop</h1>
            <h4 class="subtitle">Your first Nano transaction!</h4><br>
            <div class="">
                <div class="container">
                    <form class="form-inline" role="form">
                        <div class="form-group">
                            <div class="input-group input-group-account">
                                <input type="text" class="input-account form-control" id="addNanoAddress"
                                    style="border-top-left-radius: 4px; border-bottom-left-radius: 4px;"
                                    placeholder="Enter Your Nano Wallet Address: nano_" size="50">
                                <span class="input-group-btn">
                                    <button type="button" id="qr_button" class="btn-scan btn btn-default">
                                        <i class="glyphicon glyphicon-qrcode"></i>
                                    </button>
                                </span>
                                <i class="icon-ok glyphicon glyphicon-ok"></i>
                                <i class="icon-error glyphicon glyphicon-remove"></i>
                            </div>
                        </div>

                        <br><br>

                        <!-- Our checkbox dom element target -->
                        <div id="nanodrop-checkbox"></div>


                        <script>
                            function onloadCheckbox() {
                                console.info("checkbox loaded")
                            }
                            function onsuccessCheckbox(data) {
                                console.info("sent: " + data.hash)
                                $('#addNanoAddress').val("").trigger('input')
                            }
                            function onerrorCheckbox(err) {
                                // handle error
                            }
                        </script>

                        <script src="/api/api.js?onload=onloadCheckbox&onsuccess=onsuccessCheckbox&render=default" async
                            defer></script>

                    </form>
                </div>
            </div>
            <br><br><br>

            <a href="#about" class="btn btn-info" role="button">See what's below <span
                    class="glyphicon glyphicon-hand-down"></span></a>

        </center>
    </div>
</div>

<div class="qr-modal">
    <div class="qr-content">
        <div id="qr-reader" style="width: 500px; max-width: 100%;"></div>
        <div class="close">X</div>
    </div>
</div>

<script type="text/javascript" src="/js/dist/html5-qrcode.min.js"></script>